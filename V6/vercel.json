{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10,
        "memory": 1024,
        "includeFiles": [
          "src/views/**",
          "src/models/**",
          "src/routes/**",
          "src/middleware/**",
          "src/scripts/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}